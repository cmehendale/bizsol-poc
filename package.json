    "page": "^1.8.6",
    "pug": "^2.0.3",
    "riot": "^3.10.1",
    "riotgear-router": "^1.3.1",
    "selectn": "^1.1.2",
    "shortid": "^2.2.12",
    "thinky": "^2.3.9",
    "tough-cookie": "^2.3.4",
    "ts-node": "^5.0.1",
